<!DOCTYPE html>
<html>
<head>

  <style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
  height: 100vh;
  background: linear-gradient(45deg, #09dfc2, #00a9b5);
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  filter: brightness(0.9) contrast(1.1);
}

h1 {
  text-align: center;
  color: #fff;
  font-size: 3rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

#quiz-container {
  max-width: 600px;
  width: 600px;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.question {
  margin-bottom: 20px;
  font-weight: bold;
  font-size: 1.3rem;
  color: #28cad9;
}

.answer-input {
  width: 95%;
  padding: 10px;
  font-size: 1.3rem;
  border: 4px solid #09dfc2;
  border-radius: 5px;
  margin-bottom: 20px;
  outline: none;
  color: #28cad9;
  font-size: 1.3rem;
  transition: 0.3s;
}

.answer-input:focus{
  border: 4px solid #00a9b5;
}

.hint{
  color: #09dfc2;
  font-size: 1.3rem;
}
.submit-button {
    background-color: #09dfc2;
        height: 3rem;
        font-size: 1rem;
    padding: 10px;
    color: #ffffff;
    font-weight: 600;
    font-family: 'Mulish', sans-serif;
    border-radius: 5px;
    border: 2px solid #09dfc2;
    cursor: pointer;
    transition: .3s;
}

.submit-button:hover {
      background-color: transparent;
     color: #09dfc2;
     transform: scale(0.8);
}

.result {
  text-align: center;
  margin-top: 20px;
  font-weight: bold;
  font-size: 20px;
  color: #333;
}


@media  screen and (max-width:480px)and (orientation:portrait) {
    .quiz-container{
        width: 280px;
    }
    .body{
      font-size: 2rem;
    }
}

@media  screen and (max-width:600px)and (orientation:portrait) {
    .quiz-container{
        width: 400px;
    }
        .body{
      font-size: 2rem;
    }
}
  
@media  screen and (max-width:450px)and (orientation:portrait) {
    .quiz-container{
        width: 300px;
    }
        .body{
      font-size: 2rem;
    }
}
@media  screen and (max-width:370px)and (orientation:portrait) {
    .quiz-container{
        width: 270px;
    }
        .body{
      font-size: 2rem;
    }
}
  </style>
</head>
<body>
  <h1>Quiz Section</h1>
  <div id="quiz-container"></div>


<script>
  

    const quizContainer = document.getElementById('quiz-container');
    const questions = [
      { question: 'Question 1', answer: 'answer1', hint: 'hint1' },
      { question: 'Question 2', answer: 'answer2', hint: 'hint2' },
      // Add more questions here
    ];
    
    let currentQuestion = 0;
    let score = 0;
    
    function loadQuestion() {
      const questionData = questions[currentQuestion];
      const quizHTML = `
        <div class="question">${questionData.question}</div>
        <input class="answer-input" placeholder="Enter Answer" type="text" id="answerInput">
        <h3 class="hint">${questionData.hint}</h3>
        <button class="submit-button" onclick="checkAnswer()">Submit</button>
      `;
      quizContainer.innerHTML = quizHTML;
    }
    
    function checkAnswer() {
      const questionData = questions[currentQuestion];
      const answerInput = document.getElementById('answerInput');
      const userAnswer = answerInput.value.trim().toLowerCase();
      if (userAnswer === questionData.answer.toLowerCase()) {
        score++;
      }
      answerInput.value = '';
      currentQuestion++;
      if (currentQuestion === questions.length) {
        showResult();
      } else {
        loadQuestion();
      }
    }
    
    function showResult() {
      const resultHTML = `
        <div class="result">You scored ${score} out of ${questions.length}!</div>
      `;
      quizContainer.innerHTML = resultHTML;
    }
    
       console.log(score);
    loadQuestion();
</script>
</body>
</html>
